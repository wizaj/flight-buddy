# ─────────────────────────────────────────────
# SerpApi (Google Flights) - RECOMMENDED
# Get key at: https://serpapi.com/manage-api-key
# ─────────────────────────────────────────────
SERPAPI_API_KEY=your_serpapi_key_here

# ─────────────────────────────────────────────
# Amadeus API (requires approval for production)
# Get yours at: https://developers.amadeus.com
# ─────────────────────────────────────────────
AMADEUS_API_KEY=your_api_key_here
AMADEUS_API_SECRET=your_api_secret_here
AMADEUS_BASE_URL=https://test.api.amadeus.com

# Production (uncomment when ready)
# AMADEUS_BASE_URL=https://api.amadeus.com

# ─────────────────────────────────────────────
# Seats.aero (Award/Redemption Flights)
# Requires Pro subscription: https://seats.aero
# Generate key at: https://seats.aero/settings (API tab)
# ─────────────────────────────────────────────
SEATSAERO_API_KEY=your_seatsaero_key_here

# ─────────────────────────────────────────────
# ExpertFlyer (Fare Class Availability)
# Requires Premium subscription: https://expertflyer.com
# ─────────────────────────────────────────────
EXPERTFLYER_EMAIL=your_email_here
EXPERTFLYER_PASSWORD=your_password_here
